<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dani.sastisawari.register"
    android:background="@drawable/logo3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Driver Registration"
        android:id="@+id/textView3"
        android:typeface="sans"
        android:textSize="35dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/duname"
        android:longClickable="false"
        android:width="120dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/demail"
        android:layout_alignStart="@+id/demail"
        android:layout_alignRight="@+id/demail"
        android:layout_alignEnd="@+id/demail" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/person"
        android:layout_alignBottom="@+id/duname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="Driver Signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/demail"
        android:width="250dp"
        android:hint="Email"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/email"
        android:layout_alignBottom="@+id/demail"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:contentDescription="email signup" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/phone"
        android:contentDescription="Phone Number"
        android:layout_above="@+id/driver_signup_button"
        android:layout_alignLeft="@+id/imageView10"
        android:layout_alignStart="@+id/imageView10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/dmobno"
        android:width="250dp"
        android:hint="Mobile No."
        android:layout_below="@+id/dpass"
        android:layout_alignLeft="@+id/demail"
        android:layout_alignStart="@+id/demail"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Terms and Conditions"
        android:id="@+id/textView4"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/driver_signup_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/privacy"
        android:id="@+id/textView5"
        android:textColor="#222baa"
        android:clickable="true"
        android:linksClickable="true"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:id="@+id/driver_signup_button"
        android:background="#FF171515"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/dmobno"
        android:layout_alignRight="@+id/dmobno"
        android:layout_alignEnd="@+id/dmobno"
        android:layout_alignLeft="@+id/dmobno"
        android:layout_alignStart="@+id/dmobno"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/dpass"
        android:width="250dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignRight="@+id/demail"
        android:layout_alignEnd="@+id/demail"
        android:layout_marginTop="31dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@drawable/lock"
        android:layout_alignTop="@+id/dpass"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />



</RelativeLayout>
