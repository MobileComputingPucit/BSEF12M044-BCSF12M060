<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dani.sastisawari.login"
    android:background="@drawable/logo3"
    android:clickable="false">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/rusername"
        android:hint="Username"
        android:width="250dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/rpass"
        android:hint="Password"
        android:width="250dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/lock"
        android:layout_alignBottom="@+id/rpass"
        android:layout_toLeftOf="@+id/rpass"
        android:layout_toStartOf="@+id/rpass"
        android:layout_marginRight="10dp"
        android:contentDescription="passwordsymbol" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/email"
        android:layout_alignBottom="@+id/rusername"
        android:layout_toLeftOf="@+id/rusername"
        android:layout_toStartOf="@+id/rusername"
        android:layout_marginRight="10dp"
        android:contentDescription="emailsymbol" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rider Login"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="40sp"
        android:typeface="sans"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/rider_login_button"
        android:background="#FF171515"
        android:onClick="userReg"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/rpass"
        android:layout_alignEnd="@+id/rpass"
        android:layout_alignLeft="@+id/rpass"
        android:layout_alignStart="@+id/rpass"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:id="@+id/rforgotpass"
        android:layout_marginTop="42dp"
        android:textColor="#2b39f5"
        android:clickable="true"
        android:layout_below="@+id/rider_login_button"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
