<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dani.sastisawari.forgotPassword"
    android:background="@drawable/logo3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reset Password"
        android:id="@+id/resetpasswordtext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_marginTop="38dp"
        android:src="@drawable/email"
        android:layout_below="@+id/resetpasswordtext"
        android:layout_alignLeft="@+id/resetpasswordtext"
        android:layout_alignStart="@+id/resetpasswordtext"
        android:layout_marginRight="7dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailPassword"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_alignRight="@+id/resetpasswordtext"
        android:layout_alignEnd="@+id/resetpasswordtext"
        android:hint="Email" />

    <Button
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:text="Reset my password"
        android:id="@+id/resetButton"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/emailPassword"
        android:layout_alignEnd="@+id/emailPassword"
        android:textStyle="bold"
        android:background="#FF171515"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:textSize="18sp" />

</RelativeLayout>
